<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Catégorie du module -->
    <record id="module_preva_custom_report" model="ir.module.category">
        <field name="name">Rapport Preva</field>
        <field name="description">Droits d'accès pour les rapports Preva</field>
        <field name="sequence">10</field>
    </record>

    <!-- Groupe utilisateur -->
    <record id="preva_custom_report_group_user" model="res.groups">
        <field name="name">Utilisateur Rapport Preva</field>
        <field name="category_id" ref="module_preva_custom_report"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Groupe administrateur -->
    <record id="preva_custom_report_group_admin" model="res.groups">
        <field name="name">Administrateur Rapport Preva</field>
        <field name="category_id" ref="module_preva_custom_report"/>
        <field name="implied_ids" eval="[(4, ref('preva_custom_report_group_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>
