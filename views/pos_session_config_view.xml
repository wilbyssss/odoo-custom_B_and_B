<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <record id="view_pos_config_form_inherit_manual_date" model="ir.ui.view">
      <field name="name">pos.config.form.inherit.manual.date</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
      <field name="arch" type="xml">
         <xpath expr="//div[@id='pos_interface_section']" position="inside">
            <div class="col-12 col-lg-6 o_setting_box">
               <div class="o_setting_left_pane">
                  <field name="allow_manual_session_date" />
               </div>
               <div class="o_setting_right_pane">
                  <label for="allow_manual_session_date"
                     string="Autoriser la modification de la date des sesions" />
                  <div class="text-muted">
                     Autoriser la modification de la date des sessions
                  </div>
               </div>
            </div>
         </xpath>
      </field>
   </record>
</odoo>