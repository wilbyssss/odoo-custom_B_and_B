<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <!-- Configuration pour Point de Vente -->
   <record id="view_pos_config_form_inherit_manual_date" model="ir.ui.view">
      <field name="name">pos.config.form.inherit.manual.date</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
      <field name="arch" type="xml">
         <xpath expr="//div[@id='pos_interface_section']" position="inside">
            <div class="col-12 col-lg-6 o_setting_box">
               <div class="o_setting_left_pane">
                  <field name="allow_manual_session_date" />
               </div>
               <div class="o_setting_right_pane">
                  <label for="allow_manual_session_date" />
                  <div class="text-muted">
                     Permet aux utilisateurs de modifier manuellement la date des sessions PDV
                  </div>
               </div>
            </div>
         </xpath>
      </field>
   </record>

   <!-- Configuration pour Achats-->
   <record id="view_purchase_config_inherit_auto_validation" model="ir.ui.view">
      <field name="name">purchase.config.inherit.auto.validation</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase" />
      <field name="arch" type="xml">
         <xpath expr="//div[@name='purchase_setting_container']" position="inside">
            <div class="col-12 col-lg-6 o_setting_box" id="auto_validate_receipt">
               <div class="o_setting_left_pane">
                  <field name="allow_auto_validation_purchase_order" />
               </div>
               <div class="o_setting_right_pane">
                  <label for="allow_auto_validation_purchase_order" />
                  <div class="text-muted">
                     Confirmer automatiquement les réceptions après validation du bon de commande
                  </div>
               </div>
            </div>
         </xpath>
      </field>
   </record>
   <record id="view_invoice_config_inherit_auto_validation" model="ir.ui.view">
      <field name="name">purchase.config.inherit.auto.invoice</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase" />
      <field name="arch" type="xml">
         <xpath expr="//div[@name='purchase_setting_container']" position="inside">
            <div class="col-12 col-lg-6 o_setting_box" id="auto_validate_receipt">
               <div class="o_setting_left_pane">
                  <field name="allow_auto_invoice" />
               </div>
               <div class="o_setting_right_pane">
                  <label for="allow_auto_invoice" />
                  <div class="text-muted">
                     Créer et confirmer automatiquement les factures apres la validations des
                     réceptions
                  </div>
               </div>
            </div>
         </xpath>
      </field>
   </record>

   <record id="view_stock_move_inherit_config" model="ir.ui.view">
      <field name="name">stock.move.config.view.form.inherit</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="stock.res_config_settings_view_form" />
      <field name="arch" type="xml">
         <xpath expr="//div[@name='operations_setting_container']" position="inside">
            <div class="col-12 col-lg-6 o_setting_box" id="reception_report">
               <div class="o_setting_left_pane">
                  <field name="restrict_transfert_with_zero_qty" />
               </div>
               <div class="o_setting_right_pane">
                  <label for="restrict_transfert_with_zero_qty" />
                  <div class="text-muted">
                     Bloquer le transfert des produits ayant un stock inférieur ou égal à zéro
                  </div>
               </div>
            </div>
         </xpath>
      </field>
   </record>
</odoo>